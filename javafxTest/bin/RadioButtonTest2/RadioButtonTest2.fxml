<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RadioButtonTest2.RadioButtonT2controller">
   <children>
      <HBox prefHeight="20.0" prefWidth="20.0">
         <children>
            <Label fx:id="name" text="이름" />
            <TextField fx:id="nametext">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="10.0" prefWidth="20.0">
         <children>
            <Label fx:id="gender" text="성별">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
            <RadioButton fx:id="male" mnemonicParsing="false" text="남">
               <toggleGroup>
                  <ToggleGroup fx:id="genderr" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="female" mnemonicParsing="false" text="여" toggleGroup="$genderr" />
         </children>
      </HBox>
      <HBox prefHeight="10.0" prefWidth="20.0">
         <children>
            <Label fx:id="hobby" text="취미">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
            <CheckBox fx:id="travel" mnemonicParsing="false" text="여행" />
            <CheckBox fx:id="hiking" mnemonicParsing="false" text="등산" />
            <CheckBox fx:id="book" mnemonicParsing="false" text="독서" />
            <CheckBox fx:id="baduk" mnemonicParsing="false" text="바둑" />
            <CheckBox fx:id="janggi" mnemonicParsing="false" text="장기" />
            <CheckBox fx:id="game" mnemonicParsing="false" text="게임" />
            <CheckBox fx:id="tenis" mnemonicParsing="false" text="테니스" />
            <CheckBox fx:id="badmin" mnemonicParsing="false" text="배드민턴" />
         </children>
      </HBox>
      <Button fx:id="show" mnemonicParsing="false" onAction="#show" text="보기">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Button>
      <TextArea fx:id="contentbox" prefHeight="100.0" prefWidth="40.0" />
   </children>
</VBox>
